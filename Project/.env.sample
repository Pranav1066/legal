# ============================================
# Legal Intelligence System - Sample Configuration
# This file contains example values for all configuration options
# Copy this to .env and modify as needed
# ============================================

# ============================================
# API Keys (REQUIRED - Get your key at https://ai.google.dev/)
# ============================================
GEMINI_API_KEY=AIzaSyDxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# Application Settings
# ============================================
APP_NAME=Legal Intelligence System
APP_VERSION=1.0.0
ENVIRONMENT=development

# ============================================
# Server Configuration
# ============================================
WEB_PORT=8501
API_PORT=8004
CLI_ENABLED=true

# ============================================
# AI Model Configuration
# ============================================
# Available models: gemini-2.5-flash-lite, gemini-2.0-flash-exp, gemini-1.5-pro
AI_MODEL=gemini-2.5-flash-lite
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=8000

# ============================================
# Database Configuration
# ============================================
DATABASE_PATH=legal_intelligence.db
ENABLE_DATABASE_LOGGING=true

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/legal_intelligence.log
LOG_MAX_SIZE_MB=50
LOG_BACKUP_COUNT=5

# ============================================
# Legal Practice Settings
# ============================================
DEFAULT_PRACTICE_AREAS=Corporate Law,Criminal Law,Civil Litigation,Intellectual Property,Employment Law,Tax Law,Real Estate,Family Law,Immigration Law,Environmental Law

DEFAULT_JURISDICTIONS=Federal,State,Local,International

# ============================================
# Case Analysis Settings
# ============================================
MIN_CASE_RELEVANCE_SCORE=0.6
MAX_CASE_RECOMMENDATIONS=20
STATUTE_SEARCH_DEPTH=50

# ============================================
# Legal Research Targets
# ============================================
TARGET_CASE_SUCCESS_RATE=0.75
TARGET_COMPLIANCE_SCORE=0.95
TARGET_DOCUMENT_ACCURACY=0.99

# ============================================
# Alert Thresholds
# ============================================
DEADLINE_WARNING_DAYS=7
CRITICAL_DEADLINE_DAYS=3
HIGH_RISK_THRESHOLD=0.7
COMPLIANCE_ALERT_THRESHOLD=0.8

# ============================================
# Feature Flags (Enable/Disable Features)
# ============================================
ENABLE_CONTRACT_ANALYSIS=true
ENABLE_RISK_ASSESSMENT=true
ENABLE_PRECEDENT_SEARCH=true
ENABLE_COMPLIANCE_CHECK=true
ENABLE_LEGAL_DRAFTING=true
ENABLE_CASE_LAW_ANALYSIS=true
ENABLE_STATUTE_RESEARCH=true
ENABLE_LEGAL_MEMO_GENERATION=true
ENABLE_DUE_DILIGENCE=true
ENABLE_LITIGATION_PREDICTION=true

# ============================================
# Contract Review Settings
# ============================================
CONTRACT_RISK_CATEGORIES=Liability,Termination,Payment Terms,Intellectual Property,Confidentiality,Force Majeure,Indemnification,Warranties

# ============================================
# Compliance Framework Settings
# ============================================
COMPLIANCE_FRAMEWORKS=GDPR,HIPAA,SOX,CCPA,PCI-DSS,ISO 27001,FCPA

# ============================================
# Cache Settings
# ============================================
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600

# ============================================
# Rate Limiting
# ============================================
API_RATE_LIMIT_PER_MINUTE=60
WEB_SESSION_TIMEOUT_MINUTES=30

# ============================================
# Optional Advanced Settings
# ============================================

# Top Tier Journals (for research ranking)
# TOP_TIER_JOURNALS=Harvard Law Review,Yale Law Journal,Stanford Law Review,Columbia Law Review

# Top Tier Courts (for precedent ranking)
# TOP_TIER_COURTS=Supreme Court of the United States,U.S. Court of Appeals,State Supreme Courts

# Document Templates Directory
# TEMPLATES_DIR=templates/

# Export Directory
# EXPORT_DIR=exports/

# Backup Settings
# ENABLE_AUTO_BACKUP=true
# BACKUP_FREQUENCY_HOURS=24
# BACKUP_RETENTION_DAYS=30

# Email Notifications (if integrated)
# ENABLE_EMAIL_NOTIFICATIONS=false
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@example.com
# SMTP_PASSWORD=your-app-password
# NOTIFICATION_EMAIL=notifications@yourfirm.com

# Calendar Integration (if integrated)
# ENABLE_CALENDAR_SYNC=false
# CALENDAR_API_KEY=your-calendar-api-key

# Document Storage (if using cloud storage)
# STORAGE_TYPE=local
# AWS_S3_BUCKET=your-bucket-name
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
